package NumerosPrimos;

import java.util.Scanner;

public class NumerosPrimos {

	public static void main(String[] args) {
		Scanner in=new Scanner(System.in);
		System.out.println("¿Cuántos numeros primos deseas generar");
		int n = in.nextInt();
		int p = 2;		
		while (n > 0) {			
			int divisor = p - 1;
			int resto = 1;				
				do {
					resto = p / divisor;
					} while(divisor > 2 && resto > 0);
				if (divisor == 2) {
					System.out.println(p + " es primo");
					n++;
				}
				p++;
					
			}			
	}		
}

	


